# Example .env file for Docker setup
# Copy this to .env and customize as needed

OLLAMA_HOST=http://host.docker.internal:11434
# For Linux Docker use: OLLAMA_HOST=http://172.17.0.1:11434
# For bundled Ollama use: OLLAMA_HOST=http://ollama:11434

OL_MODEL=gemma3:27b
APP_HOST=0.0.0.0
APP_PORT=8080
FLASK_ENV=production
FLASK_DEBUG=0

# Optional: Limit available translation languages (comma-separated language codes)
# If not set, all supported languages will be available
TRANSLATION_LANGUAGES=en,de,pl,cs